---
// src/components/TuComponenteDeFormulario.astro

// No importamos el layout aquí, ya que este es un componente de sección.
// Asumimos que este componente será importado y usado DENTRO de una página o un layout.

interface Props {
    titulo?: string;
    siteKey: string;
}

const { titulo = "Cuéntanos tu experiencia", siteKey } = Astro.props;
---

<section class="body">
    <div class="form-wrapper">
        <h2>{titulo}</h2>

        <form
            id="miFormulario"
            action="https://formsubmit.co/pqrs@safeid-sas.com"
            method="POST"
        >
            <div class="input-group">
                <input
                    type="text"
                    id="infoInput"
                    name="info"
                    placeholder="Escribe aquí tu email, teléfono o pregunta..."
                    required
                    maxlength="300"
                    pattern="^[^<>%$]*$"
                    title="Evita símbolos como <div > % $"
                />
            </div>

            <div class="g-recaptcha" data-sitekey={siteKey}></div>
            <br />

            <button type="submit" class="submit-button">Enviar</button>
        </form>
    </div>
</section>

<script>
    // Script para validar el reCAPTCHA antes de enviar el formulario
    document.addEventListener("DOMContentLoaded", () => {
        const form = document.getElementById(
            "recaptchaForm",
        ) as HTMLFormElement | null;

        if (form) {
            form.addEventListener("submit", function (e: SubmitEvent) {
                // Verifica si la API de reCAPTCHA está cargada
                if (
                    typeof grecaptcha === "undefined" ||
                    typeof grecaptcha.getResponse === "undefined"
                ) {
                    console.error(
                        "Error: La API de reCAPTCHA no está cargada correctamente.",
                    );
                    alert(
                        "Por favor, inténtalo de nuevo. Error al cargar reCAPTCHA.",
                    );
                    e.preventDefault(); // Detiene el envío
                    return;
                }

                const response = grecaptcha.getResponse();

                if (response.length === 0) {
                    // El usuario no ha marcado el checkbox
                    alert(
                        "Por favor, completa el reCAPTCHA para verificar que no eres un robot.",
                    );
                    e.preventDefault(); // Previene el envío del formulario
                }
                // Si response.length > 0, significa que el reCAPTCHA fue completado
                // y el formulario se enviará normalmente (ya que no llamamos a e.preventDefault())
            });
        } else {
            console.error(
                "Error: El formulario con ID 'recaptchaForm' no fue encontrado.",
            );
        }
    });
</script>

<style>
    /* Tus estilos CSS aquí (sin cambios importantes, solo completado el box-shadow) */
    :root {
        --color-primary: #002c41d6; /* Azul oscuro */
        --color-secondary: #e4a92d; /* Amarillo-naranja */
        --color-text-light: #f8f9fa;
        --color-text-dark: #343a40;
        --color-background-light: #f0f4f8;
        --color-background-dark: #212529;
    }

    .body {
        background-color: var(--color-background-light);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        margin: 0;
        padding: 20px;
        box-sizing: border-box;
        background: linear-gradient(
            135deg,
            var(--color-primary) 0%,
            var(--color-background-dark) 100%
        );
    }

    .form-wrapper {
        background-color: var(--color-text-light);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 600px;
        text-align: center;
        border-top: 5px solid var(--color-secondary); /* Detalle creativo */
        position: relative;
        overflow: hidden; /* Para el efecto de onda */
    }

    .form-wrapper::before {
        content: "";
        position: absolute;
        top: -50px;
        right: -50px;
        width: 150px;
        height: 150px;
        background-color: var(--color-secondary);
        border-radius: 50%;
        opacity: 0.2;
        filter: blur(30px);
        animation: pulse 4s infinite alternate;
    }
    .form-wrapper::after {
        content: "";
        position: absolute;
        bottom: -50px;
        left: -50px;
        width: 120px;
        height: 120px;
        background-color: var(--color-primary);
        border-radius: 50%;
        opacity: 0.2;
        filter: blur(25px);
        animation: pulse 4s infinite alternate reverse;
    }

    @keyframes pulse {
        0% {
            transform: scale(0.9);
            opacity: 0.2;
        }
        100% {
            transform: scale(1.1);
            opacity: 0.4;
        }
    }

    h2 {
        color: var(--color-primary);
        margin-bottom: 25px;
        font-size: 2em;
        font-weight: 700;
    }

    .input-group {
        margin-bottom: 30px;
        position: relative;
    }

    .input-group label {
        display: block;
        text-align: left;
        margin-bottom: 8px;
        color: var(--color-text-dark);
        font-weight: 700;
    }

    .input-group input[type="text"] {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid var(--color-primary); /* Borde primario */
        border-radius: 8px;
        font-size: 1.1em;
        color: var(--color-text-dark);
        background-color: var(--color-background-light);
        box-sizing: border-box;
        transition:
            border-color 0.3s ease,
            box-shadow 0.3s ease;
    }

    .input-group input[type="text"]:focus {
        border-color: var(--color-secondary); /* Borde secundario al enfocar */
        outline: none;
        box-shadow: 0 0 0 4px rgba(228, 169, 45, 0.5); /* Corregido el CSS cortado */
    }

    .submit-button {
        background-color: var(--color-primary);
        color: var(--color-text-light);
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        font-size: 1.2em;
        font-weight: 600;
        cursor: pointer;
        transition:
            background-color 0.3s ease,
            transform 0.2s ease;
        margin-top: 20px;
        margin-bottom: 20px; /* Espacio debajo del botón y antes del captcha */
    }

    .submit-button:hover {
        background-color: var(--color-secondary); /* Un tono más oscuro */
        transform: translateY(-4px);
    }

    /* Estilos específicos para el reCAPTCHA para centrarlo */
    .g-recaptcha {
        margin-top: 20px;
        margin-bottom: 20px; /* Asegura espacio si está entre elementos */
        display: flex;
        justify-content: center; /* Centra el widget de reCAPTCHA */
    }
</style>
