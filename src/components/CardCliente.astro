---
interface Props {
    imagen: string; // Link de la imagen
    nombreCliente: string;
    comentario: string;
}

const { imagen, nombreCliente, comentario } = Astro.props;
---

<section>
    <div class="fondoGris">
        <img
            class="imagen"
            src={imagen}
            alt={`Imagen del cliente ${nombreCliente}`}
        />
    </div>
    <h3 class="titulo">{nombreCliente}</h3>
    <p class="descripcion">{comentario}</p>
</section>

<style>
    .imagen {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        display: block;
    }

    .fondoGris {
        background-color: #e3e3e3;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 15em;
        overflow: hidden;
    }

    section {
        background-color: white;
        width: 250px;
        padding: 20px;
        margin: 10px;
        border-radius: 2%;
        max-height: 300px;
    }
</style>
